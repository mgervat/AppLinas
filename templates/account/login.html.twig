{% extends 'base.html.twig' %}

{% block title %}Linas autrement! Login{% endblock %}

{% block body %}
<!--Page Title-->
<section class="page-title" style="background-image:url(/images/background/12.jpg);">
    <div class="auto-container">
        <h1>Connectez vous!</h1>
        <ul class="bread-crumb clearfix">
            <li><a href="{{ path('home') }}">Home</a></li>
            <li>Login</li>
        </ul>
    </div>
</section>
<!--End Page Title-->

<!-- Contactn Page Section-->
<section class="contact-page-section">
    <div class="auto-container">
        <div class="row clearfix">

            <!--Column-->
            <div class="form-column col-md-6 col-sm-12 col-xs-12">
                <div class="inner-column">
                    {% if hasError %}
                        <div class="alert alert-danger">
                            <p>Nom d'utilisateur ou mot de passe invalide!</p>
                        </div>
                    {% endif %}
                    <!-- Contact Form -->
                    <div class="contact-form">
                        <!--Contact Form-->
                        <form method="post" id="contact-form" action="{{ path('account_login') }}">
                            <div class="row clearfix">
                                <div class="col-md-6 col-sm-6 col-xs-12 form-group">
                                    <input type="text" id="username" name="_username" value="{{ username }}" placeholder="Nom d'utilisateur" required>
                                </div>

                                <div class="col-md-6 col-sm-6 col-xs-12 form-group">
                                    <input type="password" id="password" name="_password" placeholder="Mot de passe" required>
                                </div>

                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 form-group">
                                    <button type="submit" class="theme-btn btn-style-two">Envoyer</button>
                                </div>
                            </div>
                        </form>
                    </div>
                    <!--End Contact Form -->
                </div>
            </div>

        </div>
    </div>
</section>
{% endblock %}

{% block javascripts %}
    <script src="/js/jquery.fancybox.js"></script>
    <script src="/js/owl.js"></script>
    <script src="/js/wow.js"></script>
    <script src="/js/appear.js"></script>
    <script src="/js/script.js"></script>
{% endblock %}
